<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="color">@color/purple_500</item>
    </style>

    <style name="PlusButton" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">Plus Button</item>
    </style>

    <style name="MinusButton" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_remove</item>
        <item name="android:contentDescription">Minus Button</item>
    </style>

    <style name="score_text">
        <item name="android:textAppearance">@style/TextAppearance.Material3.DisplaySmall</item>
    </style>
    
    <style name="team_text">
        <item name="android:textAppearance">@style/TextAppearance.Material3.DisplayLarge</item>
    </style>
</resources>